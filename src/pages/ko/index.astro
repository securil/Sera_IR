---
// src/pages/ko/index.astro
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/HeroSection.astro';

// 언어 설정
const lang = 'ko';
---

<Layout lang={lang}>
  <HeroSection lang={lang} />
  
  <!-- 여기에 기본 페이지 구조 추가 -->
  <div class="temp-content">
    <div class="container">
      <div class="text-center">
        <h2 class="mb-4">한국어 페이지</h2>
        <p>이곳에 섹션 컴포넌트들이 추가될 예정입니다.</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .temp-content {
    padding: 5rem 0;
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
