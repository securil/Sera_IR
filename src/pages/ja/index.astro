---
// src/pages/ja/index.astro
import Layout from '../../layouts/Layout.astro';
import HeroSection from '../../components/HeroSection.astro';

// 언어 설정
const lang = 'ja';
---

<Layout lang={lang}>
  <HeroSection lang={lang} />
  
  <!-- 여기에 기본 페이지 구조 추가 -->
  <div class="temp-content">
    <div class="container">
      <div class="text-center">
        <h2 class="mb-4">日本語ページ</h2>
        <p>ここにセクションコンポーネントが追加される予定です。</p>
      </div>
    </div>
  </div>
</Layout>

<style>
  .temp-content {
    padding: 5rem 0;
    min-height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
