---
// 기본 경로로 접속 시 /ko로 리디렉션
const userLanguage = 'ko'; // 실제 상황에선 브라우저 언어 감지 로직 추가

// 리디렉션
export function getStaticPaths() {
  return [
    { params: { lang: undefined } },
  ];
}

const baseUrl = import.meta.env.BASE_URL;
const redirectUrl = baseUrl ? (baseUrl.endsWith('/') ? `${baseUrl}ko/` : `${baseUrl}/ko/`) : '/ko/';
---

<meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />

<script define:vars={{ redirectUrl }}>
  window.location.href = redirectUrl;
</script>

<style>
  :root {
    background-color: #121212;
    color: #ffffff;
    font-family: 'Pretendard', 'Apple SD Gothic Neo', sans-serif;
  }
  
  body {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    margin: 0;
    text-align: center;
  }
</style>

<body>
  <div>
    <h1>리디렉션 중...</h1>
    <p>자동으로 이동하지 않는 경우 <a href={redirectUrl}>여기</a>를 클릭하세요.</p>
  </div>
</body>
