---

<section id="contact" class="section team">
  <div class="container">
    <div class="section-header text-center mb-5">
      <h2 class="text-gradient">{texts[lang].title}</h2>
      <p class="section-description">{texts[lang].description}</p>
    </div>
    
    <div class="team-section fade-in">
      <h3 class="content-title">{texts[lang].leadership}</h3>
      
      <div class="team-grid">
        {teamMembers.leadership.map((member) => (
          <div class="team-card">
            <div class="member-image">
              <div class="image-placeholder">
                {member.nameEn.charAt(0)}
              </div>
              <div class="member-social">
                {member.social?.linkedin && (
                  <a href={member.social.linkedin} class="social-link" aria-label="LinkedIn">
                    <i class="fab fa-linkedin-in"></i>
                  </a>
                )}
                {member.social?.twitter && (
                  <a href={member.social.twitter} class="social-link" aria-label="Twitter">
                    <i class="fab fa-twitter"></i>
                  </a>
                )}
                {member.social?.github && (
                  <a href={member.social.github} class="social-link" aria-label="GitHub">
                    <i class="fab fa-github"></i>
                  </a>
                )}
                {member.social?.instagram && (
                  <a href={member.social.instagram} class="social-link" aria-label="Instagram">
                    <i class="fab fa-instagram"></i>
                  </a>
                )}
              </div>
            </div>
            <div class="member-info">
              <h4 class="member-name">{member.name}</h4>
              <div class="member-position">{member.position}</div>
              <p class="member-bio">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="team-section fade-in">
      <h3 class="content-title">{texts[lang].development}</h3>
      
      <div class="team-grid">
        {teamMembers.development.map((member) => (
          <div class="team-card small">
            <div class="member-image">
              <div class="image-placeholder small">
                {member.nameEn.charAt(0)}
              </div>
            </div>
            <div class="member-info">
              <h4 class="member-name">{member.name}</h4>
              <div class="member-position">{member.position}</div>
              <p class="member-bio">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="team-section fade-in">
      <h3 class="content-title">{texts[lang].content}</h3>
      
      <div class="team-grid">
        {teamMembers.content.map((member) => (
          <div class="team-card small">
            <div class="member-image">
              <div class="image-placeholder small">
                {member.nameEn.charAt(0)}
              </div>
            </div>
            <div class="member-info">
              <h4 class="member-name">{member.name}</h4>
              <div class="member-position">{member.position}</div>
              <p class="member-bio">{member.bio}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <div class="contact-information fade-in">
      <div class="contact-card">
        <div class="contact-card-content">
          <h3 class="contact-title">{texts[lang].contactInfo}</h3>
          
          <div class="contact-details">
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-map-marker-alt"></i>
              </div>
              <div class="contact-text">
                <span class="contact-label">{texts[lang].address}</span>
                <span class="contact-value">{companyInfo.address}</span>
              </div>
            </div>
            
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-envelope"></i>
              </div>
              <div class="contact-text">
                <span class="contact-label">{texts[lang].email}</span>
                <span class="contact-value">{companyInfo.email}</span>
              </div>
            </div>
            
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-phone-alt"></i>
              </div>
              <div class="contact-text">
                <span class="contact-label">{texts[lang].phone}</span>
                <span class="contact-value">{companyInfo.phone}</span>
              </div>
            </div>
            
            <div class="contact-item">
              <div class="contact-icon">
                <i class="fas fa-building"></i>
              </div>
              <div class="contact-text">
                <span class="contact-label">{texts[lang].businessRegNumber}</span>
                <span class="contact-value">{companyInfo.businessRegNumber}</span>
              </div>
            </div>
          </div>
          
          <div class="company-social">
            <h4 class="social-title">{texts[lang].socialMedia}</h4>
            
            <div class="social-links">
              {companyInfo.social?.instagram && (
                <a href={companyInfo.social.instagram} class="social-link" aria-label="Instagram">
                  <i class="fab fa-instagram"></i>
                </a>
              )}
              {companyInfo.social?.facebook && (
                <a href={companyInfo.social.facebook} class="social-link" aria-label="Facebook">
                  <i class="fab fa-facebook-f"></i>
                </a>
              )}
              {companyInfo.social?.twitter && (
                <a href={companyInfo.social.twitter} class="social-link" aria-label="Twitter">
                  <i class="fab fa-twitter"></i>
                </a>
              )}
              {companyInfo.social?.linkedin && (
                <a href={companyInfo.social.linkedin} class="social-link" aria-label="LinkedIn">
                  <i class="fab fa-linkedin-in"></i>
                </a>
              )}
            </div>
          </div>
        </div>
        
        <div class="contact-card-map">
          <div class="map-placeholder">
            <i class="fas fa-map-marked-alt"></i>
            <span class="map-text">Map</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="background-glow"></div>
</section>

<style>
  .team {
    position: relative;
    background: linear-gradient(180deg, rgba(18, 18, 18, 0.95), var(--color-background));
    overflow: hidden;
  }
  
  .section-description {
    max-width: 800px;
    margin: 0 auto 3rem;
    font-size: 1.2rem;
    opacity: 0.9;
  }
  
  .content-title {
    font-size: 1.8rem;
    margin-bottom: 2rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }
  
  .team-section {
    margin-bottom: 5rem;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  
  .team-card {
    background: var(--color-card);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  
  .team-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
  }
  
  .team-card.small {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
  }
  
  .member-image {
    position: relative;
    overflow: hidden;
  }
  
  .image-placeholder {
    width: 100%;
    padding-bottom: 100%;
    background: linear-gradient(45deg, var(--color-secondary), var(--color-primary));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    font-weight: 700;
    color: white;
  }
  
  .image-placeholder.small {
    width: 80px;
    height: 80px;
    padding-bottom: 0;
    border-radius: 50%;
    font-size: 2rem;
  }
  
  .image-placeholder::after {
    content: attr(data-initial);
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  
  .member-social {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    gap: 1rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }
  
  .team-card:hover .member-social {
    transform: translateY(0);
  }
  
  .social-link {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    background: white;
    color: var(--color-primary);
  }
  
  .member-info {
    padding: 1.5rem;
  }
  
  .team-card.small .member-info {
    padding: 0;
  }
  
  .member-name {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
  }
  
  .team-card.small .member-name {
    font-size: 1.1rem;
    margin-bottom: 0.3rem;
  }
  
  .member-position {
    font-size: 0.9rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    font-weight: 500;
  }
  
  .team-card.small .member-position {
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
  }
  
  .member-bio {
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.9;
  }
  
  .team-card.small .member-bio {
    font-size: 0.85rem;
  }
  
  .contact-information {
    margin-bottom: 2rem;
  }
  
  .contact-card {
    background: var(--color-card);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
  
  .contact-card-content {
    padding: 2.5rem;
  }
  
  .contact-title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: inline-block;
  }
  
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }
  
  .contact-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }
  
  .contact-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }
  
  .contact-icon i {
    font-size: 1.2rem;
    color: white;
  }
  
  .contact-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .contact-label {
    font-size: 0.9rem;
    opacity: 0.7;
  }
  
  .contact-value {
    font-size: 1.1rem;
  }
  
  .company-social {
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
  }
  
  .social-title {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-links .social-link {
    width: 40px;
    height: 40px;
    background: var(--gradient-primary);
  }
  
  .social-links .social-link:hover {
    transform: translateY(-5px);
  }
  
  .contact-card-map {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #2a2a2a;
  }
  
  .map-placeholder {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .map-placeholder i {
    font-size: 3rem;
  }
  
  .map-text {
    font-size: 1.2rem;
    font-weight: 600;
  }
  
  .background-glow {
    position: absolute;
    bottom: -350px;
    left: -350px;
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(255, 62, 157, 0.15) 0%, rgba(157, 0, 255, 0.1) 30%, rgba(0, 0, 0, 0) 70%);
    border-radius: 50%;
    z-index: -1;
    filter: blur(80px);
    opacity: 0.4;
  }
  
  /* 반응형 스타일 */
  @media (max-width: 1200px) {
    .team-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 992px) {
    .team-grid {
