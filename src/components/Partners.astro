// 파트너 데이터
const partners = {
  hardware: [
    { id: 1, name: "Partner A", logo: "A" },
    { id: 2, name: "Partner B", logo: "B" },
    { id: 3, name: "Partner C", logo: "C" },
    { id: 4, name: "Partner D", logo: "D" }
  ],
  content: [
    { id: 5, name: "Content X", logo: "X" },
    { id: 6, name: "Content Y", logo: "Y" },
    { id: 7, name: "Content Z", logo: "Z" },
    { id: 8, name: "Content W", logo: "W" }
  ]
};

