---

<section id="product" class="section product-tech">
  <div class="container">
    <div class="section-header text-center mb-5">
      <h2 class="text-gradient">{texts[lang].title}</h2>
      <p class="section-description">{texts[lang].description}</p>
    </div>
    
    <div class="product-showcase">
      <div class="product-image">
        <div class="product-device">
          <!-- 제품 이미지가 들어갈 공간 -->
          <div class="device-glow"></div>
        </div>
      </div>
      
      <div class="product-features">
        <div class="product-feature-item fade-in">
          <div class="feature-number">01</div>
          <div class="feature-content">
            <h3>{texts[lang].feature1}</h3>
            <p>{texts[lang].feature1Desc}</p>
          </div>
        </div>
        
        <div class="product-feature-item fade-in delay-100">
          <div class="feature-number">02</div>
          <div class="feature-content">
            <h3>{texts[lang].feature2}</h3>
            <p>{texts[lang].feature2Desc}</p>
          </div>
        </div>
        
        <div class="product-feature-item fade-in delay-200">
          <div class="feature-number">03</div>
          <div class="feature-content">
            <h3>{texts[lang].feature3}</h3>
            <p>{texts[lang].feature3Desc}</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="technology-specs">
      <h3 class="text-center mb-4">{texts[lang].specs}</h3>
      
      <div class="tech-grid">
        <div class="tech-item fade-in">
          <div class="tech-icon">
            <i class="fas fa-vibration"></i>
          </div>
          <h4>{texts[lang].tech1}</h4>
        </div>
        
        <div class="tech-item fade-in delay-100">
          <div class="tech-icon">
            <i class="fab fa-bluetooth-b"></i>
          </div>
          <h4>{texts[lang].tech2}</h4>
        </div>
        
        <div class="tech-item fade-in delay-200">
          <div class="tech-icon">
            <i class="fas fa-battery-three-quarters"></i>
          </div>
          <h4>{texts[lang].tech3}</h4>
        </div>
        
        <div class="tech-item fade-in delay-300">
          <div class="tech-icon">
            <i class="fas fa-drafting-compass"></i>
          </div>
          <h4>{texts[lang].tech4}</h4>
        </div>
      </div>
      
      <div class="text-center mt-5">
        <a href="#content" class="btn btn-primary">
          {texts[lang].moreButton}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .product-tech {
    position: relative;
    background: linear-gradient(180deg, var(--color-background), rgba(18, 18, 18, 0.95));
  }
  
  .section-description {
    max-width: 800px;
    margin: 0 auto 3rem;
    font-size: 1.2rem;
    opacity: 0.9;
  }
  
  .product-showcase {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 5rem;
  }
  
  .product-image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .product-device {
    width: 100%;
    height: 400px;
    background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><path d="M30,20 L70,20 C77.732,20 84,26.268 84,34 L84,66 C84,73.732 77.732,80 70,80 L30,80 C22.268,80 16,73.732 16,66 L16,34 C16,26.268 22.268,20 30,20 Z" fill="%23333" /></svg>');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    position: relative;
  }
  
  .device-glow {
    position: absolute;
    width: 120%;
    height: 120%;
    left: -10%;
    top: -10%;
    background: radial-gradient(circle, rgba(255, 62, 157, 0.4) 0%, rgba(157, 0, 255, 0.2) 40%, rgba(0, 0, 0, 0) 70%);
    filter: blur(30px);
    opacity: 0.8;
    animation: pulse 3s ease-in-out infinite alternate;
  }
  
  .product-features {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .product-feature-item {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    background: var(--color-card);
    border-radius: 12px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .product-feature-item:hover {
    transform: translateX(10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }
  
  .feature-number {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0.8;
  }
  
  .feature-content h3 {
    font-size: 1.4rem;
    margin-bottom: 0.5rem;
  }
  
  .feature-content p {
    opacity: 0.8;
  }
  
  .technology-specs {
    margin-top: 5rem;
  }
  
  .technology-specs h3 {
    font-size: 2rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .tech-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }
  
  .tech-item {
    text-align: center;
    padding: 2rem;
    background: var(--color-card);
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .tech-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }
  
  .tech-icon {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    background: var(--gradient-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    transition: transform 0.3s ease;
  }
  
  .tech-icon i {
    font-size: 1.8rem;
    color: white;
  }
  
  .tech-item:hover .tech-icon {
    transform: scale(1.1);
  }
  
  .tech-item h4 {
    font-size: 1.1rem;
    font-weight: 600;
  }
  
  @keyframes pulse {
    0% {
      opacity: 0.5;
      transform: scale(1);
    }
    100% {
      opacity: 0.8;
      transform: scale(1.1);
    }
  }
  
  /* 반응형 스타일 */
  @media (max-width: 992px) {
    .product-showcase {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .tech-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .product-device {
      height: 300px;
    }
    
    .product-feature-item {
      padding: 1.2rem;
    }
    
    .feature-number {
      font-size: 1.8rem;
    }
    
    .feature-content h3 {
      font-size: 1.2rem;
    }
  }
  
  @media (max-width: 480px) {
    .tech-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .tech-item {
      padding: 1.5rem;
    }
  }
</style>
